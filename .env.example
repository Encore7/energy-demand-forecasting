# General
ENVIRONMENT=local
LOG_LEVEL=info
LOG_FORMAT=json

# Grafana / Prometheus / Loki / Tempo
GRAFANA_PORT=3000
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin
GRAFANA_THEME=dark

PROMETHEUS_PORT=9090
TEMPO_PORT=3200
LOKI_PORT=3100

# OTEL Collector (inside Docker)
OTEL_GRPC_PORT=4317
OTEL_HTTP_PORT=4318
OTEL_HEALTH_PORT=13133
OTEL_INTERNAL_METRICS_PORT=8888
OTEL_PROM_EXPORTER_PORT=8889

# MinIO (S3-compatible)
MINIO_PORT=9000
MINIO_CONSOLE_PORT=9001
MINIO_ROOT_USER=minio
MINIO_ROOT_PASSWORD=minio12345

# Bucket we use for lakeFS storage
S3_BUCKET=energy
S3_ENDPOINT=http://minio:9000
S3_REGION=us-east-1

# LakeFS
LAKEFS_PORT=8000
LAKEFS_SECRET_KEY=dev-secret-dev-secret-dev-secret-1234

# API credentials
LAKEFS_ACCESS_KEY_ID=replace-with-your-own-access-key
LAKEFS_SECRET_ACCESS_KEY=replace-with-your-own-secret-key

# Repo + branch
LAKEFS_REPO=energy
LAKEFS_BRANCH=main

# lakeFS API endpoint as seen from other containers
LAKEFS_ENDPOINT=http://lakefs:8000

# S3 gateway endpoint as seen from other containers
LAKEFS_S3_ENDPOINT_INTERNAL=http://lakefs:8000

# Forecast store (Postgres)
FORECAST_PG_PORT=5434
FORECAST_PG_USER=forecast
FORECAST_PG_PASSWORD=forecast
FORECAST_PG_DB=forecast
FORECAST_STORE_DSN=postgresql+psycopg2://forecast:forecast@forecast-postgres:5432/forecast

# MLflow
MLFLOW_PORT=5050
MLFLOW_TRACKING_URI=http://localhost:5050          # host view
MLFLOW_TRACKING_URI_INTERNAL=http://mlflow:5000    # inside containers

# Airflow
AIRFLOW_PORT=8080
AIRFLOW_PG_PORT=5433
AIRFLOW__CORE__DEFAULT_TIMEZONE=Europe/Berlin

# OTEL
OTEL_SERVICE_NAMESPACE=energy-demand-forecasting
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4318
OTEL_EXPORTER_OTLP_PROTOCOL=http/protobuf
OTEL_TRACES_EXPORTER=otlp
OTEL_METRICS_EXPORTER=otlp
OTEL_LOGS_EXPORTER=none
OTEL_METRIC_EXPORT_INTERVAL=10

# Validation toggles
STRICT_DEMAND_VALIDATION=true
STRICT_WEATHER_VALIDATION=true
STRICT_GOLD_VALIDATION=true

# Features
FEATURE_HISTORY_DAYS=35
