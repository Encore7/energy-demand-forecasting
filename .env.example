# General
ENV=local
SERVICE_NAME=energy-forecasting
LOG_LEVEL=INFO

# OpenTelemetry
OTEL_SERVICE_NAME=energy-forecasting
OTEL_EXPORTER_OTLP_ENDPOINT=http://otel-collector:4317
OTEL_EXPORTER_OTLP_PROTOCOL=grpc

# Kafka / Redpanda
KAFKA_BOOTSTRAP_SERVERS=redpanda:9092
KAFKA_TOPIC_DEMAND=demand_events
KAFKA_TOPIC_WEATHER=weather_events
KAFKA_TOPIC_MARKET=market_events
KAFKA_CONSUMER_GROUP=energy-platform
KAFKA_SECURITY_PROTOCOL=PLAINTEXT

# Schema Registry
SCHEMA_REGISTRY_URL=http://schema-registry:8081

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# Postgres
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=energy
POSTGRES_USER=energy
POSTGRES_PASSWORD=energy
POSTGRES_SSLMODE=disable
DATABASE_URL=

# Object Storage (MinIO / S3)
OBJECT_STORE_ENDPOINT=http://minio:9000
OBJECT_STORE_ACCESS_KEY=minioadmin
OBJECT_STORE_SECRET_KEY=minioadmin
OBJECT_STORE_BUCKET=energy-lake
OBJECT_STORE_REGION=us-east-1
OBJECT_STORE_SECURE=false

# Lakehouse paths
LAKEHOUSE_ROOT_PREFIX=lakehouse
BRONZE_PREFIX=bronze
SILVER_PREFIX=silver
GOLD_PREFIX=gold

# Spark / Iceberg
SPARK_MASTER=local[*]
SPARK_APP_NAME=energy-platform
ICEBERG_CATALOG_NAME=local
ICEBERG_WAREHOUSE=s3a://energy-lake/warehouse

# Flink
FLINK_JOBMANAGER_URL=http://flink-jobmanager:8081
INTRADAY_WINDOW_MINUTES=5
INTRADAY_ALLOWED_LATENESS_SECONDS=30

# Feast (placeholders; path in repo)
FEAST_REPO_PATH=platform/contracts/feast
FEAST_ONLINE_STORE=redis
FEAST_OFFLINE_STORE=parquet

# MLflow
MLFLOW_TRACKING_URI=http://mlflow:5000
MLFLOW_EXPERIMENT_NAME=energy-demand-forecasting

# Internal service URLs (future service discovery / k8s)
API_GATEWAY_URL=http://api-gateway:8000
INGESTION_SERVICE_URL=http://ingestion-service:8000
FEATURE_SERVICE_URL=http://feature-service:8000
TRAINING_SERVICE_URL=http://training-service:8000
REALTIME_FORECAST_SERVICE_URL=http://realtime-forecast-service:8000
DRIFT_SERVICE_URL=http://drift-service:8000

# Security toggles (local-first)
AUTH_ENABLED=false
INTERNAL_API_KEY=
