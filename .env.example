# Grafana
GRAFANA_PORT=3000
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin
GRAFANA_THEME=dark

# Prometheus
PROMETHEUS_PORT=9090

# Loki / Tempo
LOKI_PORT=3100
TEMPO_PORT=3200

# OTel Collector (OTLP)
OTEL_GRPC_PORT=4317
OTEL_HTTP_PORT=4318
OTEL_HEALTH_PORT=13133
OTEL_INTERNAL_METRICS_PORT=8888
OTEL_PROM_EXPORTER_PORT=8889

# Log level defaults
OBS_LOG_LEVEL=info

# Service runtime (shared defaults)
ENVIRONMENT=local
LOG_FORMAT=json
LOG_LEVEL=info

OTEL_SERVICE_NAMESPACE=energy-demand-forecasting
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4318
OTEL_EXPORTER_OTLP_PROTOCOL=http/protobuf
OTEL_TRACES_EXPORTER=otlp
OTEL_METRICS_EXPORTER=otlp
OTEL_LOGS_EXPORTER=none
OTEL_METRIC_EXPORT_INTERVAL=10
